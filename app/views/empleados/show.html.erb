<%- model_class = Empleado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:NumEmpleado) %>:</strong></dt>
  <dd><%= @empleado.NumEmpleado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Curp) %>:</strong></dt>
  <dd><%= @empleado.Curp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:TipoRegimen) %>:</strong></dt>
  <dd><%= @empleado.TipoRegimen %></dd>
  <dt><strong><%= model_class.human_attribute_name(:NumSeguridadSocial) %>:</strong></dt>
  <dd><%= @empleado.NumSeguridadSocial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Departamento_id) %>:</strong></dt>
  <dd><%= @empleado.Departamento_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Banco) %>:</strong></dt>
  <dd><%= @empleado.Banco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:FechaInicioRelLaboral) %>:</strong></dt>
  <dd><%= @empleado.FechaInicioRelLaboral %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Puesto) %>:</strong></dt>
  <dd><%= @empleado.Puesto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:TipoContrato) %>:</strong></dt>
  <dd><%= @empleado.TipoContrato %></dd>
  <dt><strong><%= model_class.human_attribute_name(:TipoJornada) %>:</strong></dt>
  <dd><%= @empleado.TipoJornada %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PeriodicidadPago) %>:</strong></dt>
  <dd><%= @empleado.PeriodicidadPago %></dd>
  <dt><strong><%= model_class.human_attribute_name(:SalarioBaseCotApor) %>:</strong></dt>
  <dd><%= @empleado.SalarioBaseCotApor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:RiesgoPuesto) %>:</strong></dt>
  <dd><%= @empleado.RiesgoPuesto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:SalarioDiarioIntegrado) %>:</strong></dt>
  <dd><%= @empleado.SalarioDiarioIntegrado %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              empleados_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_empleado_path(@empleado), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              empleado_path(@empleado),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
