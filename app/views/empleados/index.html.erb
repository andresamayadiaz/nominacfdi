<%- model_class = Empleado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:NumEmpleado) %></th>
      <th><%= model_class.human_attribute_name(:Curp) %></th>
      <th><%= model_class.human_attribute_name(:TipoRegimen) %></th>
      <th><%= model_class.human_attribute_name(:NumSeguridadSocial) %></th>
      <th><%= model_class.human_attribute_name(:Departamento_id) %></th>
      <th><%= model_class.human_attribute_name(:Banco) %></th>
      <th><%= model_class.human_attribute_name(:FechaInicioRelLaboral) %></th>
      <th><%= model_class.human_attribute_name(:Puesto) %></th>
      <th><%= model_class.human_attribute_name(:TipoContrato) %></th>
      <th><%= model_class.human_attribute_name(:TipoJornada) %></th>
      <th><%= model_class.human_attribute_name(:PeriodicidadPago) %></th>
      <th><%= model_class.human_attribute_name(:SalarioBaseCotApor) %></th>
      <th><%= model_class.human_attribute_name(:RiesgoPuesto) %></th>
      <th><%= model_class.human_attribute_name(:SalarioDiarioIntegrado) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= link_to empleado.id, empleado_path(empleado) %></td>
        <td><%= empleado.NumEmpleado %></td>
        <td><%= empleado.Curp %></td>
        <td><%= empleado.TipoRegimen %></td>
        <td><%= empleado.NumSeguridadSocial %></td>
        <td><%= empleado.Departamento_id %></td>
        <td><%= empleado.Banco %></td>
        <td><%= empleado.FechaInicioRelLaboral %></td>
        <td><%= empleado.Puesto %></td>
        <td><%= empleado.TipoContrato %></td>
        <td><%= empleado.TipoJornada %></td>
        <td><%= empleado.PeriodicidadPago %></td>
        <td><%= empleado.SalarioBaseCotApor %></td>
        <td><%= empleado.RiesgoPuesto %></td>
        <td><%= empleado.SalarioDiarioIntegrado %></td>
        <td><%=l empleado.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_empleado_path(empleado), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      empleado_path(empleado),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_empleado_path,
            :class => 'btn btn-primary' %>
